#sxhkd

#browser
mod4 + c
      chromium

#terminal
mod4 + shift + Return
     alacritty 

#powermenu
mod4 + Escape
      powermenu 

#screenshot
mod4 + Insert
      scrot

#brightness
XF86MonBrightnessDown
	brightnessctl set 5%-

XF86MonBrightnessUp
	brightnessctl set 5%+

#volume
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
