#hotkeys

#browser
alt + c
      chromium

#powermenu
alt + Escape
      powermenu 

#screenshot
alt + Insert
      sleep 1 && scrot -s -e 'feh $f' 

#increase volume
alt + Page_Up
      amixer sset Master 5%+; exec dunstify 'Volume up'  "amixer -M sget Master | awk -F\"[][]\" '/%/ { print $2 }' | head -n1"

#decrease volume
alt + Page_Down
      amixer sset Master 5%-; exec notify-send 'Volume down'

#mute
alt + Delete 
      {amixer sset Master mute, amixer sset Master unmute}

#dmenu clipboard
alt + o 
      clipmenu -i -fn Terminus:size=14.3
